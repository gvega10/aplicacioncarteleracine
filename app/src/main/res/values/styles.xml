<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionModeStyle">@style/myContextBarStyle.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.CustomTranslucent" parent="AppTheme"/>

    <style name="TranslucentActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="myContextBarStyle.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/actionBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>


    <style name="CustomActionBarThemeTranslucent" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="movie_genre_style">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="ActionLink" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/action_link</item>
    </style>

    <style name="title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:fontFamily">@font/karma</item>
    </style>

    <style name="subTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:fontFamily">@font/karma</item>
    </style>


    <style name="customButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/accent</item>
        <item name="android:textSize">@dimen/custom_button</item>
    </style>

    <style name="cancelButton" parent="customButton">
        <item name="android:background">@color/primary</item>
    </style>


    <style name="animDialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>


    <style name="ToolbarTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
    </style>

</resources>
